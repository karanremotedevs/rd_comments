{
  "name": "remotedevs/rd-comments",
  "type": "typo3-cms-extension",
  "description": "Comment extension for TYPO3",
  "authors": [
    {
      "name": "Abhay Rathod",
      "role": "Developer"
    }
  ],
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.2",
    "remotedevs/rd-comments": "1.0.0",
    "typo3/cms-core": "^12 || ^13",
    "georgringer/news": "^11 || ^12"
  },
  "support": {
    "issues": "https://github.com/karanremotedevs/Comments/issues"
  },
  "require-dev": {
    "typo3/testing-framework": "^6.9.0"
  },
  "autoload": {
    "psr-4": {
      "RemoteDevs\\RdComments\\": "Classes/"
    }
  },
  "replace": {
    "typo3-ter/rd_comments": "self.version"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "extra": {
    "typo3/cms": {
      "web-dir": ".Build/public",
      "extension-key": "rd_comments"
    }
  }
}
